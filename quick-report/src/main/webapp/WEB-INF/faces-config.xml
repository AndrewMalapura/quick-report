<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
 
	<application>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
    	<resource-bundle>
    		<base-name>opo.vistec.producer</base-name>
    		<var>producer</var>
    	</resource-bundle>
  	</application>
  	<navigation-rule>
   		<from-view-id>index.xhtml</from-view-id>
    	<navigation-case>
     		<from-outcome>success</from-outcome>
     		<to-view-id>pages/application.xhtml</to-view-id>
     		<redirect/>
   		</navigation-case>
  	</navigation-rule>
  	<navigation-rule>
   		<from-view-id>index.xhtml</from-view-id>
    	<navigation-case>
     		<from-outcome>loginfailed</from-outcome>
     		<to-view-id>index.xhtml</to-view-id>
   		</navigation-case>
  	</navigation-rule>
  	<navigation-rule>
   <from-view-id>pages/application.xhtml</from-view-id>
   <navigation-case>
       <from-outcome>chit</from-outcome>
       <to-view-id>pages/chit.xhtml</to-view-id>
   </navigation-case>
</navigation-rule>
	<managed-bean>
		<managed-bean-name>sessionBean</managed-bean-name>
		<managed-bean-class>opo.vistec.SessionBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>userBO</property-name>
			<value>#{userBO}</value>
		</managed-property>
		<managed-property>
			<property-name>customerBO</property-name>
			<value>#{customerBO}</value>
		</managed-property>
		<managed-property>
			<property-name>salesBO</property-name>
			<value>#{salesBO}</value>
		</managed-property>
		<managed-property>
			<property-name>inventBO</property-name>
			<value>#{inventBO}</value>
		</managed-property>
		<managed-property>
			<property-name>invoiceBO</property-name>
			<value>#{invoiceBO}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>chitFormBean</managed-bean-name>
		<managed-bean-class>opo.vistec.ChitFormBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>customerBO</property-name>
			<value>#{customerBO}</value>
		</managed-property>
		<managed-property>
			<property-name>salesBO</property-name>
			<value>#{salesBO}</value>
		</managed-property>
		<managed-property>
			<property-name>inventBO</property-name>
			<value>#{inventBO}</value>
		</managed-property>
	</managed-bean> 
</faces-config>